@model AppointmentsViewModel
@{
    ViewData["Title"] = "Appointments";
}

<h2><span style="font-weight:bold">Complete this form to appoint your visit</span></h2>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <form class="col-md-4" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="datetime" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <button type="submit" class="btn button2">Submit</button>
            @if (!string.IsNullOrEmpty(ViewBag.message))
            {
                <span class="alert-success">@ViewBag.message</span>
            }
        </form>
    </div>

}
else
{
    <h2>Appointments</h2>
    <p>
        You must be logged in to make an appointment!
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </p>
    <p>
        No account?
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </p>
}
